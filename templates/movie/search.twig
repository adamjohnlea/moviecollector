{% extends "layouts/base.twig" %}

{% block title %}Search Movies - Movie Collector{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Search Movies</h1>
        
        <form method="get" action="/movies/search" class="mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-grow">
                    <label for="query" class="sr-only">Search for a movie</label>
                    <input type="text" 
                           id="query" 
                           name="query" 
                           value="{{ query|default('') }}" 
                           placeholder="Search for a movie..." 
                           class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white px-4 py-3 text-base"
                           required>
                </div>
                <button type="submit" class="px-5 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Search
                </button>
            </div>
        </form>
        
        {% if error is defined and error %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mt-4" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endif %}
        
        {% if movies is defined %}
            {% if movies|length > 0 %}
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {% for movie in movies %}
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                            <a href="/movies/{{ movie.id }}" class="block">
                                {% if movie.poster_url is not null %}
                                    <img src="{{ movie.poster_url }}" alt="{{ movie.title }}" class="w-full h-64 object-cover">
                                {% else %}
                                    <div class="w-full h-64 bg-gray-300 dark:bg-gray-700 flex items-center justify-center">
                                        <span class="text-gray-500 dark:text-gray-400">No poster available</span>
                                    </div>
                                {% endif %}
                                <div class="p-4">
                                    <h2 class="text-lg font-semibold mb-1 line-clamp-2">{{ movie.title }}</h2>
                                    {% if movie.release_date is defined and movie.release_date is not empty %}
                                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{{ movie.release_date|slice(0, 4) }}</p>
                                    {% endif %}
                                    {% if movie.overview %}
                                        <p class="text-sm text-gray-700 dark:text-gray-300 line-clamp-3">{{ movie.overview }}</p>
                                    {% endif %}
                                </div>
                            </a>
                            
                            <div class="px-4 pb-4">
                                <a href="/movies/{{ movie.id }}" 
                                   class="w-full flex justify-center items-center px-3 py-1 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    View Details
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                {% if pagination %}
                    <div class="mt-8 flex justify-center">
                        <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                            {% if pagination.current_page > 1 %}
                                <a href="/movies/search?query={{ query|url_encode }}&page={{ pagination.current_page - 1 }}" 
                                   class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <span class="sr-only">Previous</span>
                                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            {% endif %}
                            
                            {% for page in range(max(1, pagination.current_page - 2), min(pagination.total_pages, pagination.current_page + 2) + 1) %}
                                <a href="/movies/search?query={{ query|url_encode }}&page={{ page }}" 
                                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium {% if page == pagination.current_page %}text-indigo-600 dark:text-indigo-400 bg-indigo-50 dark:bg-indigo-900{% else %}text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700{% endif %}">
                                    {{ page }}
                                </a>
                            {% endfor %}
                            
                            {% if pagination.current_page < pagination.total_pages %}
                                <a href="/movies/search?query={{ query|url_encode }}&page={{ pagination.current_page + 1 }}" 
                                   class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <span class="sr-only">Next</span>
                                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            {% endif %}
                        </nav>
                    </div>
                {% endif %}
            {% else %}
                <div class="bg-yellow-50 dark:bg-yellow-900 border-l-4 border-yellow-400 dark:border-yellow-700 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700 dark:text-yellow-200">
                                No movies found for "{{ query }}". Try a different search term.
                            </p>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% elseif query is defined and query is not empty %}
            <div class="flex justify-center items-center py-12">
                <svg class="animate-spin -ml-1 mr-3 h-8 w-8 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="text-lg text-gray-600 dark:text-gray-400">Searching...</span>
            </div>
        
            <div class="bg-blue-50 dark:bg-blue-900 border-l-4 border-blue-400 dark:border-blue-700 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-blue-700 dark:text-blue-200">
                            Enter a movie title to search for movies. You can add movies to your collection from the search results.
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %} 