{% extends "layouts/base.twig" %}

{% block title %}Home - Movie Collector{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto">
        {% if not current_user %}
            <div class="text-center py-12">
                <h1 class="text-4xl font-bold mb-4">Welcome to Movie Collector</h1>
                <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
                    Track your movie collection, create watch lists, and discover new films.
                </p>
                <div class="flex justify-center space-x-4">
                    <a href="/register" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg">
                        Get Started
                    </a>
                    <a href="/login" class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-white font-bold py-3 px-6 rounded-lg">
                        Sign In
                    </a>
                </div>
            </div>
        {% else %}
            <div class="flex justify-center space-x-4 mt-6">
                <a href="/movies/search" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg">
                    Search Movies
                </a>
                <a href="/collection" class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-white font-bold py-3 px-6 rounded-lg">
                    View Collection
                </a>
            </div>
            
            {% if popular_movies|length > 0 %}
                <div class="mt-16">
                    <h2 class="text-2xl font-bold mb-6">Popular Movies</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                        {% for movie in popular_movies %}
                            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
                                <a href="/movies/{{ movie.id }}">
                                    {% if movie.poster_url %}
                                        <img src="{{ movie.poster_url }}" alt="{{ movie.title }}" class="w-full object-cover h-64">
                                    {% else %}
                                        <div class="w-full h-64 bg-gray-300 dark:bg-gray-700 flex items-center justify-center">
                                            <span class="text-gray-500 dark:text-gray-400">No image</span>
                                        </div>
                                    {% endif %}
                                    <div class="p-4">
                                        <h3 class="font-bold text-gray-800 dark:text-white truncate">{{ movie.title }}</h3>
                                        {% if movie.release_date is defined and movie.release_date is not empty %}
                                        <p class="text-sm text-gray-600 dark:text-gray-400">
                                            {{ movie.release_date|slice(0, 4) }}
                                        </p>
                                        {% endif %}
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %} 